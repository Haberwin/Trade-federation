<?xml version="1.0" encoding="UTF-8"?>
<configuration description="MaiDu InstrumentationTest">
    <option name="log-file-path" value="./log" />
    <option name="test-tag" value="maidu" />
    <option name="build-id" value="weekly" />
    <target_preparer class="com.android.tradefed.targetprep.InstallApkSetup">
        <option name="apk-path" value="./apks/com.maidu.weekly.apk"/>
        <option name="install-arg" value="-t -r"></option>
        <option name="apk-path" value="./apks/com.maidu.weekly.test.apk"/>
        <option name="install-arg" value="-t -r"></option>
    </target_preparer>
    <test class="com.android.tradefed.testtype.InstrumentationTest" >
        <option name ="package" value="com.maidu.weekly.test"/>
        <option name="class" value="com.maidu.weekly.StartFirstTest#testSetting" />
        <option name="runner" value="androidx.test.runner.AndroidJUnitRunner"/>
    </test> 

    <logger class="com.android.tradefed.log.FileLogger">
        <option name="log-level" value="VERBOSE" />
        <option name="log-level-display" value="VERBOSE" />
    </logger>
    <result_reporter class="com.android.tradefed.result.EmailResultReporter">
        <option name="sender" value="wenhua.liu@mobiiot.com.cn"></option>
        <option name="destination" value="wenhua.liu@mobiiot.com.cn"></option>
        <option name="subject-tag" value="Tradefed Test result"></option>
        <option name="include-test-failures" value="true"></option>
    </result_reporter>
    <result_reporter class="com.android.tradefed.result.suite.SuiteResultReporter" />
    <result_reporter class="com.android.tradefed.result.TextResultReporter"></result_reporter>
    <result_reporter class="com.android.tradefed.result.XmlResultReporter"/>
</configuration>